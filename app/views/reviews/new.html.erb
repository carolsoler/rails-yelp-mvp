<h1>New review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, label: 'Rating', collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.input :content, label: 'What do you think about this restaurant?' %>
  <%= f.button :submit, class: "btn-primary"%>
<% end %>
